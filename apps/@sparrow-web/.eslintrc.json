{
  "env": {
    "browser": true,
    "es2021": true
  },
  "plugins": ["svelte", "@typescript-eslint", "unused-imports"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:svelte/recommended",
    "prettier"
  ],
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "extraFileExtensions": [".svelte"],
        "ecmaVersion": "latest",
        "sourceType": "module"
      }
    },
    {
      "files": ["*.ts"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": null
      }
    }
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "svelte/valid-compile":"off",
    "unused-imports/no-unused-imports": "error", // Automatically remove unused imports
    "no-console": ["error", { "allow": ["warn", "error", "info", "debug", "trace", "table", "group", "groupEnd"] }], // allows dependency array
    "no-debugger": "error"
  }
}
